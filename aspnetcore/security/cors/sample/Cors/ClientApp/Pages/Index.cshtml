@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Cors Test</h1>
</div>

<div>
    <input type="button" value="Test" onclick="requestVal()" />
    <span id='result'> </span>
</div>


<script>

    function requestVal() {
        $.ajax({
            //url: 'https://webapi20190128063025.azurewebsites.net/api/values/1',
            url: 'https://webapi20190128063025.azurewebsites.net/api/widget',
            type: 'GET',
            error: function () {
                $('#result').text("See F12 Console for error");
            }
        }).done(function (result) {
            $('#result').text(result);
        });
    }

</script>